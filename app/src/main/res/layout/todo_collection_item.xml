<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/todoTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="@dimen/todo_card_vert_padding"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/todo_card_vert_padding"
                android:layout_weight="1"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/deleteImageView"
                app:layout_constraintStart_toEndOf="@+id/checkImageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Something to do" />

            <ImageView
                android:id="@+id/deleteImageView"
                android:layout_width="@dimen/todo_icon_button_size"
                android:layout_height="@dimen/todo_icon_button_size"
                android:layout_marginBottom="@dimen/todo_card_vert_padding"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="@dimen/todo_card_vert_padding"
                android:contentDescription="@string/delete_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_delete_danger_24dp" />

            <ImageView
                android:id="@+id/checkImageView"
                android:layout_width="@dimen/todo_icon_button_size"
                android:layout_height="@dimen/todo_icon_button_size"
                android:layout_marginBottom="@dimen/todo_card_vert_padding"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/todo_card_vert_padding"
                android:contentDescription="@string/check_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_box_outline_blank_white_24dp" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>